<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center;">Add a new campground!</h1>
	<div style="width: 30%; margin: 30px auto;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="Name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="Image URL">
			</div>
			<div class="form-group">
				<input class="form-control" type="location" name="location" id="location" placeholder="Location">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="price" placeholder="Price" min="500" step="1">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="Description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>